{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
      "@framework/*": [
        "./src/fs-context/*"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@samples/*": [
        "./src/fs-context/samples/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./config/**/*.ts"
  ]
}